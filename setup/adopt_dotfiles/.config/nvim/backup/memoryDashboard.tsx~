const MemoryDashboard = ({ clicks, restartGame }) => {
  return (
    <div className="h-[_200px] w-full rounded-xl bg-blu-light-cyan">
      <p className="p-10">{clicks}</p>
      <button className="p-10" onClick={restartGame}>
        Restart game
      </button>
      <p>{`Best score: ${1}`}</p>
    </div>
  );
};

export default MemoryDashboard;

// When the game is loaded, it should retrieve and display the best score
// from localStorage.
