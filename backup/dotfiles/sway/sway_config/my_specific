
# Touchpad enabling #
input "1267:12729:ASUE140D:00_04F3:31B9_Touchpad" {
    dwt enabled
    tap enabled
    middle_emulation enabled
    natural_scroll enabled
}

# Language toggling #
input type:keyboard {
    xkb_layout us,ua
    xkb_options grp:win_space_toggle
}

# Monitor settings #
output eDP-1 scale 1
output eDP-1 mode 2880x1800


# Font settings #
font pango:SourceCodePro Medium 20

# Screenshot enabling using grim and grimshot#
bindsym Print       exec grimshot copy active
bindsym Mod4+Shift+p exec grimshot copy area